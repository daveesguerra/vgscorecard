<div class="row">
  <div class="large-10 columns">
    <h1>Users</h1>
  </div>
  <div class="large-2 columns">
    <%= link_to "New User", new_admin_user_path, class: "radius button" %>
  </div>
  <div class="large-12 columns">
    <table>
      <thead>
      <tr>
        <td>Username</td>
        <td>Full Name</td>
        <td>Role</td>
        <td>Actions</td>
      </tr>
      </thead>
      <tbody>
        <% @users.each do |u| %>
          <tr>
            <td><%= link_to u.name, user_path(u) %></td>
            <td><%= u.first_name %> <%= u.last_name %></td>
            <td><%= u.role %></td>
            <td><%= link_to "Edit", edit_admin_user_path(u), class: "label" %> <%= link_to "Delete", nil, class: "label alert" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>