<div class="row">
  <div class="large-12 columns">
    <% if @users.count == 0 %>
      <p>There are no users.</p>
    <% else %>
      <h1>Users</h1>
      <ul class="no-disc">
      <% @users.each do |u| %>
        <li><%= link_to u.name, user_path(u) %></li>
      <% end %>
      </ul>
    <% end %>
  </div>
</div>